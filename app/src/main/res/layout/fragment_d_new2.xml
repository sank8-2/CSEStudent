<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DFragmentNew"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CGPA CALCULATOR"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="1st SEM"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#0ff"

        android:id="@+id/first"
        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="2nd SEM"
        android:id="@+id/sec"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#0ff"

        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="3rd SEM"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#0ff"

        android:id="@+id/third"
        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="4th SEM"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/fourth"
        android:background="#0ff"

        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="5th SEM"
        android:id="@+id/fifth"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#0ff"

        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="6th SEM"
        android:id="@+id/sixth"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#0ff"

        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="7th SEM"
        android:id="@+id/seventh"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#0ff"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="8th SEM"
        android:id="@+id/eight"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#0ff"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCalculate"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/result"
        android:text="NA"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />



</LinearLayout>